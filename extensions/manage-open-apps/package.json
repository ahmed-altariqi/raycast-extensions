{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "manage-open-apps",
  "title": "Manage Open Apps",
  "description": "Manage open applications using your keyboard to close an application, close all applications, and toggle fullscreen mode.",
  "icon": "extension-icon.png",
  "author": "ahmed-altariqi",
  "categories": [
    "System"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "close-app",
      "title": "Close App",
      "description": "Close selected open application",
      "mode": "view"
    },
    {
      "name": "close-all-apps",
      "title": "Close all Apps",
      "description": "Close all open applications",
      "mode": "no-view"
    },
    {
      "name": "toggle-fullscreen",
      "title": "Toggle Fullscreen",
      "description": "Toggle the frontmost application's fullscreen",
      "mode": "no-view"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.65.0",
    "@raycast/utils": "^1.10.1",
    "run-applescript": "^7.0.0"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^1.0.6",
    "@types/node": "20.8.10",
    "@types/react": "18.2.27",
    "eslint": "^8.51.0",
    "prettier": "^3.0.3",
    "typescript": "^5.2.2"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  }
}
